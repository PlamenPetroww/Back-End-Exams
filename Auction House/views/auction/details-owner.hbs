<main>
    <!-- Details Page - Auction owner -->
    <section id="catalog-section">

        <h1 class="item">
            Fishing Boat
            <div class="f-right">
                <a class="action pad-small f-left" href="/auction/{{offer._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/auction/{{offer._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{offer.image}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{offer.category}}</strong></p>
                    <p>{{offer.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{offer.price}}</strong>
                        </div>

                        <div>
                            <!-- If there is a bidder -->
                            Bid by <strong>John Maclane</strong>

                            <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->

                            <!-- If there are no bids -->
                            No bids
                        </div>
                    </div>

                </div>
            </div>

            <footer>Listed by {{creatorName}}</footer>
        </div>

    </section>

</main>