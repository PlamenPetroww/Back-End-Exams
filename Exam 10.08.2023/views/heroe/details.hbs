<main>

  <section id="details-page">

    <div class="main_card">
      <div class="card_left">
        <div class="card_datails">

          <h1>Name: {{heroe.name}}</h1>
          <h3>Created by an author: {{creatorFirstName}} {{creatorLastName}}</h3>
          <div class="card_character">
            <p class="card-species">Species: {{heroe.species}}</p>
            <p class="card-skin">Skin colour: {{heroe.skinColor}}</p>
            <p class="card-eye">Eye Colour: {{heroe.eyeColor}}</p>
          </div>

          <p class="disc">Description: {{heroe.description}}</p>

          <!-- If there is no registered user, do not display buttons-->
            
          <div class="social-btn">
          {{#if user}}
            {{#if isOwner}}
            <!-- Only for registered user and author of the post -->
            <a href="/heroe/{{heroe._id}}/edit" class="edit-btn">Edit</a>
            <a href="/heroe/{{heroe._id}}/delete" class="del-btn">Delete</a>
            {{else}}
            <!-- logged in user who has already voted-->
            {{#if isVoted}}
            <p class="thanks-for-vote">Thanks For Voting</p>
            {{else}}
            <a href="/heroe/{{heroe._id}}/vot" class="vote-up">Vote</a>
            
            <!-- logged in users, who have not yet voted-->
          {{/if}}
          {{/if}}
          {{/if}}
          </div>
          {{!-- {{/unless}} --}}
        </div>
      </div>
      <div class="card_right">
        <img src="{{heroe.image}}" alt="image" />
      </div>
    </div>

  </section>

  <section id="votes">
    <div class="vote-info">
      <div class="card_left">
        <div class="card_datails">
          <h1>Votes</h1>
          <div class="card_vote">
            <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
            <p class="PV">Total rating of votes: {{votesLength}}</p>
          </div>
          {{#if votedEmail.votes}}
          <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
          <p class="disc">People who voted for the post - {{#each votedEmailName}} {{email}} {{/each}}</p>
          {{else}}
          <!-- If not display: -->
          {{!-- {{#unless isVoted}} --}}
          <p class="disc">People who voted for the post - No one has voted yet.</p>
          {{/if}}
          {{!-- {{/unless}} --}}
        </div>
      </div>
    </div>
  </section>

</main>